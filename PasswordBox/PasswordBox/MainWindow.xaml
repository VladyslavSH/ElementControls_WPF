<Window x:Class="PasswordBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordBox"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="0.4*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Background="AliceBlue">
            <Label HorizontalAlignment="Center" FontSize="25">
                <Bold>-PasswordBox-</Bold>
            </Label>
            <PasswordBox Margin="5" Width="540" Height="40" Padding="10"></PasswordBox>
        </StackPanel>
        <Button HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="40" Width="130" FontSize="20" Margin="10">Clear</Button>
        <Button HorizontalAlignment="Center" Height="40" Width="130" FontSize="20" Margin="10">Clear</Button>

    </Grid>
</Window>
